@using System.Web.Optimization
@model HotCar.WebUI.Frontend.Models.LoginModel

@{
    ViewBag.Title = "Login";  
}

@section Styles{
    @Styles.Render("~/Content/jednotka/login/css")
}
@section Scripts{
    @Styles.Render("~/bundles/Login/scripts")
}

<div id="main" role="main">
    <div class="top-content">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1>
                        <strong>Будьте ласкаві, авторизуйтесь</strong>
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Login to our site</h3>
                            <p>Enter your username and password to log on:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-key"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        @using (Html.BeginForm(new {ReturnUrl = ViewBag.ReturnUrl, @class = "login-form", id = "LoginForm"}))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.UserName, new {@class = "form-control", placeholder = "Username...", name = "form-username"})
                                @Html.ValidationMessageFor(u => u.UserName)
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(u => u.Password, new {@class = "form-control", name = "form-password", placeholder = "Password..."})
                                @Html.ValidationMessageFor(u => u.Password)
                            </div>
                            @Html.ValidationSummary(true)
                            <button class='btn btn-contrast btn-block' type='submit'>
                                Sign In!
                            </button>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 social-login">
                    <h3>...or login with:</h3>
                    <div class="social-login-buttons">
                        <a class="btn btn-link-1 btn-link-1-facebook" href="#">
                            <i class="fa fa-facebook"></i> Facebook
                        </a>
                        <a class="btn btn-link-1 btn-link-1-twitter" href="#">
                            <i class="fa fa-twitter"></i> Twitter
                        </a>
                        <a class="btn btn-link-1 btn-link-1-google-plus" href="#">
                            <i class="fa fa-google-plus"></i> Google Plus
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="fade" id="scroll-to-top">
        <i class="fa-icon-chevron-up"></i>
    </div>
</div>





